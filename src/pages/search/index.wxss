page {
  background-color: #f6f6f6;
}

.header-cotent {
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.left-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}

.searbar-view {
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #f6f6f6;
  border-radius: 30rpx;
  width: 100%;
  height: 68rpx;
  font-size: 28rpx;
  color: #323232;
}
.search-input {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  line-height: 100%;
  padding-left: 10rpx;
}
.placehodle {
  color: #999999;
}
.btn {
  line-height: 50rpx;
  text-align: center;
  width: 120rpx;
  height: 50rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
  background: rgb(98, 157, 254);
  background: linear-gradient(
    90deg,
    rgba(98, 157, 254, 1) 0%,
    rgba(98, 126, 254, 1) 70%
  );
  margin-left: 20rpx;
}


.header-serche-rencently {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    background-color: #fff;
  }
  .header-serche-rencently .title {
    font-weight: bold;
    font-size: 32rpx;
    color: #323232;
  }
  .header-serche-rencently .icon {
    width: 28rpx;
    height: 28rpx;
  }
  
  .search-recently {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 30rpx 30rpx 30rpx;
    background-image: linear-gradient(180deg, #fff 89%, #f6f6f6 100%);
    max-height: 220rpx;
    overflow: hidden;
  }
  .search-recently .item {
    margin-top: 20rpx;
    padding: 0 30rpx;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #323232;
    background: #FAFAFA;
    border-radius: 30rpx;
    margin-right: 20rpx;
  }
  
  .cotent-view{
      box-sizing: border-box;
      padding: 30rpx;
  }

  .section-view {
    margin-top: 20rpx;
  }

  .null-view{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: 28rpx;
      color: #999;
      margin-top: 200rpx;
  }
  .null-icon{
      width: 240rpx;
      height: 240rpx;

  }