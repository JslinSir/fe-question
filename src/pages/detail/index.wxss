page{
  background-color: #fff;
}

.cotent{
  box-sizing: border-box;
  padding: 30rpx;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
}
.des{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #323232;
}
.des-mini{
  min-width: 80rpx;
  text-align: left;
}
.icon{
  min-width: 32rpx;
  min-height: 32rpx;
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
 
 

.tags-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.tags{
  box-sizing: border-box;
  padding: 8rpx 10rpx;
  background-color: #eeeeee;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #999;
}
.float-btns-group{
  position: fixed;
  bottom: 200rpx;
  right: 30rpx;
}

.animation-show0{
  animation: transx60 0.6s ease-out;
}

.animation-show1{
  animation: transx60 0.8s ease-out;
}
.animation-show2{
  animation: transx60 1s ease-out;
}

.btn-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
 
}
.btn-icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;  
}
.btn-text{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #323232;
}

.copy-right{
  display: inline-block;
  width: max-content;
  bottom: 60rpx;
  color: #ddd;
  position: absolute;
  font-size: 28rpx;
  left:50%;
  right: 50%;
  transform: translate(-50%,-50%);
}

@keyframes transx60 {
  0% {
    opacity: 0;
    transform: translateX(100%)
  }
  30% {
    opacity: 1;
    transform: translateX(-40%)
  }
  50% {
    transform: translateX(0rpx);
  }
  80% {
    opacity: 1;
    transform: translateX(-10%)
  }
  100% {
    transform: translateX(0rpx);
  }

}